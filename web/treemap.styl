body
    position fixed
    top 0
    bottom 0
    left 0
    right 0

.treemaptile
    display block
    background-color #444
    position absolute
    border 1px solid rgba(0,0,0,0.1)
    box-sizing border-box

.treemaptile.first_level
    opacity 0.4
    
.treemaptile.first_level:hover
    border 1px solid red
    opacity 1
    
